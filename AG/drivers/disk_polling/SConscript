# build libAGdiskpollingdriver.so

import os

# add additional source files here
source_files = """
   driver.cpp
   directory_monitor.cpp
   timeout_event.cpp
"""

# add source file search paths here
CPPPATH = """
   #build/out/lib/libsyndicate/
   #build/out/protobufs
   #build/out/bin/AG/
"""

# add library paths here
LIBPATH = """
   #build/out/libsyndicate
"""

# add libraries here
LIBS = """
   syndicate
   pthread
"""

# add additional CPPFLAGS here
CPPFLAGS = ""


# get our environment
Import('env')
env = env.Clone()

env.Append(LIBS = Split(LIBS))
env.Append(CPPPATH = Split(CPPPATH))
env.Append(CPPFLAGS = CPPFLAGS)
env.Append(LIBPATH = Split(LIBPATH))
env.Append(LINKFLAGS = ['-Wl,--export-dynamic'])

# generate the shared library
libAGdiskpollingdriver = env.SharedLibrary( target="libAGdiskpollingdriver.so", source=[Split(source_files)] )

Return( 'libAGdiskpollingdriver' )
